{
	"name": "codeh-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": {
		"codeh": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc && babel source --out-dir dist --extensions \".ts,.tsx,.js,.jsx\"",
		"build:ts": "tsc",
		"build:babel": "babel source --out-dir dist --extensions \".ts,.tsx,.js,.jsx\"",
		"dev": "babel source --out-dir dist --extensions \".ts,.tsx,.js,.jsx\" --watch",
		"dev:ts": "tsc --watch",
		"test": "prettier --check . && ava",
		"lint": "xo",
		"start": "node dist/cli.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@anthropic-ai/sdk": "^0.69.0",
		"dotenv": "^17.2.3",
		"highlight.js": "^11.11.1",
		"ink": "^6.4.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-text-input": "^6.0.0",
		"lowlight": "^3.3.0",
		"meow": "^14.0.0",
		"node-fetch": "^3.3.2",
		"ollama": "^0.6.3",
		"openai": "^6.9.0",
		"react": "^19.2.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/preset-env": "^7.21.0",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.21.0",
		"@esbuild-kit/esm-loader": "^2.6.5",
		"@types/node": "^20.0.0",
		"@types/react": "^19.2.0",
		"@types/sinon": "^21.0.0",
		"@types/ws": "^8.18.1",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"babel-plugin-add-import-extension": "^1.6.0",
		"babel-plugin-module-resolver": "^5.0.0",
		"chalk": "^5.2.0",
		"esbuild": "^0.25.12",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.6.2",
		"sinon": "^21.0.0",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"xo": "^1.2.3"
	},
	"xo": {
		"prettier": true,
		"semicolon": true
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "16"
					},
					"modules": false
				}
			],
			"@babel/preset-typescript",
			"@babel/preset-react"
		],
		"plugins": [
			[
				"module-resolver",
				{
					"alias": {
						"@/cli": "./source/cli",
						"@/core": "./source/core",
						"@/infrastructure": "./source/infrastructure"
					}
				}
			],
			[
				"add-import-extension",
				{
					"extension": "js"
				}
			]
		]
	}
}
