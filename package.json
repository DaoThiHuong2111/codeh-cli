{
	"name": "codeh-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": {
		"codeh": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "babel --out-dir=dist source",
		"dev": "babel --out-dir=dist --watch source",
		"test": "prettier --check . && ava",
		"lint": "xo"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"dotenv": "^17.2.3",
		"ink": "^6.4.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^14.0.0",
		"node-fetch": "^3.3.2",
		"react": "^19.2.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/preset-react": "^7.18.6",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.6.2",
		"xo": "^1.2.3"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"nodeArguments": [
			"--loader=import-jsx"
		]
	},
	"xo": {
		"prettier": true,
		"semicolon": true
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			"@babel/preset-react"
		]
	}
}
