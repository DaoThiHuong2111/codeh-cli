{
	"mcpServers": {
		"serena": {
			"command": "uvx",
			"args": [
				"--from",
				"git+https://github.com/oraios/serena",
				"serena-mcp-server",
				"--context",
				"ide-assistant",
				"--project",
				"$(pwd)"
			],
			"alwaysAllow": []
		},
		"Context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"],
			"alwaysAllow": []
		}
	}
}
